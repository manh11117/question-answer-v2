<header class="navbar navbar-fixed-top navbar-inverse">
 <div class="container">
   <%= link_to "sample app", root_path, id: "logo" %>
   <nav>
     <ul class="nav navbar-nav navbar-right">
       <% if logged_in? && current_user.role == "admin" && (controller_path == "admin/home" || controller_path == "admin/users" || controller_path == "admin/questions")%>
         <li><%= link_to "Admin Page", admin_path %></li>
         <li><%= link_to "#{current_user.name}", edit_admin_user_path(current_user) %></li>
         <li><%= link_to "Log out", admin_logout_path, method: :delete %></li>
      <% elsif logged_in? && current_user.role == "user" && (controller_name == "home" || controller_path == "users")%>
         <li><%= link_to "Welcome back #{current_user.name}", "" %></li>
         <li><%= link_to "Log out", admin_logout_path, method: :delete %></li>
       <% else %>
         <li><%= link_to "Signup", admin_signup_path %></li>
         <li><%= link_to "Log in", login_path %></li>
       <% end %>
     </ul>
   </nav>
 </div>
</header>
