<header class="navbar navbar-fixed-top navbar-inverse">
 <div class="container">
   <%= link_to "sample app", root_path, id: "logo" %>
   <nav>
     <ul class="nav navbar-nav navbar-right">
       <% if logged_in? and controller_path == 'admin/home' or controller_path == 'admin/users'%>
         <li><%= link_to "#{current_user.name}", edit_admin_user_path(current_user) %></li>
         <li><%= link_to "Log out", admin_logout_path, method: :delete %></li>
       <% else %>
         <li><%= link_to "Signup", admin_signup_path %></li>
         <li><%= link_to "Log in", admin_login_path %></li>
       <% end %>
     </ul>
   </nav>
 </div>
</header>
